{
  "name": "magic-wand-trail",
  "version": "1.0.0",
  "description": "A lightweight emoji particle trail library.",
  "type": "module",
  "source": "src/magicWandTrail.js",
  "main": "./dist/magicWandTrail.umd.js",
  "module": "./dist/magicWandTrail.es.js",
  "types": "./src/magicWandTrail.d.ts",
  "exports": {
    "types": "./src/magicWandTrail.d.ts",
    "require": "./dist/magicWandTrail.umd.js",
    "import": "./dist/magicWandTrail.es.js"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build:lib": "vite build",
    "build:demo": "vite build -c vite.config.demo.js",
    "deploy": "npm run build:demo && gh-pages -d dist-demo",
    "lint": "eslint src/**/*.js",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "canvas",
    "particles",
    "emoji",
    "cursor-trail",
    "animation",
    "frontend"
  ],
  "author": "Liubomyr Struk",
  "homepage": "https://noway9.github.io/magic-wand-trail/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoWay9/magic-wand-trail.git"
  },
  "bugs": {
    "url": "https://github.com/NoWay9/magic-wand-trail/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@vitest/eslint-plugin": "^1.6.9",
    "eslint": "^10.0.1",
    "gh-pages": "^6.3.0",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "terser": "^5.46.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
